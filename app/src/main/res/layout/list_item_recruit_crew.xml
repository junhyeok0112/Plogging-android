<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:layout_marginTop="10dp"
    android:background="#F0F0F0">

    <ImageView
        android:id="@+id/list_my_crew_image_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/defaultprofile"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/list_my_crew_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연수구 플로거 구합니다"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/list_my_crew_image_iv"
        app:layout_constraintTop_toTopOf="@id/list_my_crew_image_iv"
        android:layout_marginStart="7dp" />

    <TextView
        android:id="@+id/list_my_crew_day_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동일 : "
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/list_my_crew_image_iv"
        app:layout_constraintTop_toBottomOf="@id/list_my_crew_title_tv"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/list_my_crew_day_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/20"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/list_my_crew_day_title_tv"
        app:layout_constraintTop_toBottomOf="@id/list_my_crew_title_tv"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/list_my_crew_current_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집 현황 : "
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/list_my_crew_day_num_tv"
        app:layout_constraintTop_toBottomOf="@id/list_my_crew_title_tv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/list_my_crew_current_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/4"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/list_my_crew_current_title_tv"
        app:layout_constraintTop_toBottomOf="@id/list_my_crew_title_tv"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/list_my_crew_region_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/btn_outline_green"
        android:text="인천"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>