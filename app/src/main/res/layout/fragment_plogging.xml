<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Plogging.PloggingFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.naver.maps.map.MapFragment"
        app:navermap_mapType="Basic"
        app:navermap_locationButtonEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plogging_menu_cl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/semicricle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/plogging_kcal_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/plogging_line_iv1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/plogging_line_iv1"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/plogging_kcal_num"
            app:layout_constraintStart_toEndOf="@id/plogging_kcal_num"
            app:layout_constraintBottom_toBottomOf="@id/plogging_kcal_num"
            app:layout_constraintEnd_toStartOf="@id/plogging_distance_num"/>


        <TextView
            android:id="@+id/plogging_distance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/plogging_line_iv1"
            app:layout_constraintEnd_toStartOf="@id/plogging_line_iv2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:id="@+id/plogging_line_iv2"
            android:layout_width="3dp"
            android:layout_height="50dp"
            android:src="@drawable/vertical_line"
            app:layout_constraintTop_toTopOf="@id/plogging_distance_num"
            app:layout_constraintStart_toEndOf="@id/plogging_distance_num"
            app:layout_constraintBottom_toBottomOf="@id/plogging_distance_num"
            app:layout_constraintEnd_toStartOf="@id/plogging_time_num"/>

        <TextView
            android:id="@+id/plogging_time_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/plogging_line_iv2"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/plogging_kcal_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리(kcal)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/plogging_kcal_num"
            app:layout_constraintStart_toStartOf="@id/plogging_kcal_num"
            app:layout_constraintEnd_toEndOf="@id/plogging_kcal_num"/>

        <TextView
            android:id="@+id/plogging_distance_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리(km)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/plogging_distance_num"
            app:layout_constraintStart_toStartOf="@id/plogging_distance_num"
            app:layout_constraintEnd_toEndOf="@id/plogging_distance_num"/>

        <TextView
            android:id="@+id/plogging_time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간(분)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/plogging_time_num"
            app:layout_constraintStart_toStartOf="@id/plogging_time_num"
            app:layout_constraintEnd_toEndOf="@id/plogging_time_num"/>

        <Button
            android:id="@+id/plogging_start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_outline_green"
            android:text="Start"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/plogging_time_title_tv"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/plogging_kcal_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pause_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_pause_24"
                app:layout_constraintStart_toStartOf="@id/pause_circle"
                app:layout_constraintEnd_toEndOf="@id/pause_circle"
                app:layout_constraintTop_toTopOf="@id/pause_circle"
                app:layout_constraintBottom_toBottomOf="@id/pause_circle"/>

            <ImageView
                android:id="@+id/stop_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_white"
                app:layout_constraintStart_toEndOf="@id/pause_circle"
                app:layout_constraintTop_toTopOf="parent"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_stop_24"
                app:layout_constraintStart_toStartOf="@id/stop_circle"
                app:layout_constraintEnd_toEndOf="@id/stop_circle"
                app:layout_constraintTop_toTopOf="@id/stop_circle"
                app:layout_constraintBottom_toBottomOf="@id/stop_circle"/>

            <ImageView
                android:id="@+id/camera_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circle_white"
                app:layout_constraintStart_toEndOf="@id/stop_circle"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:layout_constraintStart_toStartOf="@id/camera_circle"
                app:layout_constraintEnd_toEndOf="@id/camera_circle"
                app:layout_constraintTop_toTopOf="@id/camera_circle"
                app:layout_constraintBottom_toBottomOf="@id/camera_circle"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>