<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:layout_marginTop="10dp"
    android:background="#C6E872"
>

    <ImageView
        android:id="@+id/list_member_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/defaultprofile"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/list_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/list_member_image"
        app:layout_constraintTop_toTopOf="@id/list_member_image"
        android:layout_marginStart="7dp" />

    <TextView
        android:id="@+id/list_member_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한줄 소개"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_member_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"
        android:gravity = "center"/>



</androidx.constraintlayout.widget.ConstraintLayout>