<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyRecordFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/my_record_preview_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/my_record_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="플로깅 일지 상세"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/record_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#12000000"
        app:layout_constraintBottom_toTopOf="@id/my_record_info_container_cl"
        app:layout_constraintTop_toBottomOf="@id/my_record_title_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_record_map_container_cl"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/my_record_day_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/1/11 플로깅 기록이에요!"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/my_record_share_iv"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_baseline_share_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:id="@+id/my_record_image_container_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_record_day_title_tv"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/my_record_map_iv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/map" />

                <ImageView
                    android:id="@+id/my_record_auth_iv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/map"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_record_info_container_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#4DF0F0F0">

        <TextView
            android:id="@+id/my_record_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플로깅 기록"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/my_record_line_iv"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/horizontal_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_record_text_tv"/>

        <TextView
            android:id="@+id/complete_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022/01/14(금) 22:50~23:02 0.5km, 15분, 50kcal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_record_line_iv"
            android:layout_marginTop="3dp"
            android:paddingBottom="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>