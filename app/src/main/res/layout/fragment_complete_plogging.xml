<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Plogging.CompletePloggingFragment">

    <TextView
        android:id="@+id/complete_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#0D625E"
        android:textStyle="bold"
        android:text="플로깅 완료"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/complete_logo_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/complete_logo"
        app:layout_constraintStart_toEndOf="@id/complete_title_iv"
        app:layout_constraintBottom_toBottomOf="@id/complete_title_iv"/>
    
    <ScrollView
        android:id="@+id/complete_picture_container_sv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_title_iv">
        
        <LinearLayout
            android:id="@+id/compelete_picture_container_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/complete_map_iv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/temp_map"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/auth_container"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/complete_auth_iv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/temp_map"/>

                <TextView
                    android:id="@+id/complete_aks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="터치해서 인증 사진을 넣어주세요"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        
        
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/complete_info_container_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/complete_picture_container_sv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#4DF0F0F0">

        <TextView
            android:id="@+id/complete_record_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플로깅 기록"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/complete_line_iv"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/horizontal_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/complete_record_title_tv"/>

        <TextView
            android:id="@+id/complete_info_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022/01/14(금) 22:50~23:02 0.5km, 15분, 50kcal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/complete_line_iv"
            android:layout_marginTop="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/complete_check_container_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_info_container_cl"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/complete_save_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#0D625E"
            android:textStyle="bold"
            android:text="아카이브에 저장"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/complete_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/complete_no_save_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/complete_save_title_iv"
            android:text="예"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/btn_outline_green2"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/complete_no_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아니오"
            android:textColor="#C4C4C4"
            android:textSize="20sp"
            android:background="@drawable/btn_outline_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/complete_save_btn"
            app:layout_constraintTop_toTopOf="@id/complete_save_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>